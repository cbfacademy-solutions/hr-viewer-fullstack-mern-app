  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug (server)",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run server",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Debug (full-stack)",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run develop",
      "serverReadyAction": {
        "pattern": "Local:\\s+(https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithEdge"
      }
    }
  ]
}
